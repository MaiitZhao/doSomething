<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_paintcolor_state"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/ll_bottom_boardstyle"
    android:layout_centerHorizontal="true"
    android:background="@mipmap/bg_dialog"
    android:orientation="horizontal"
    android:padding="5dp"
    android:visibility="gone">

    <RadioGroup
        android:id="@+id/rg_paint_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <RadioButton
            android:id="@+id/rb_purple"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/paintcolor_purple_selector"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_orange"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/paintcolor_orange_selector"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/paintcolor_green_selector"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_yellow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/paintcolor_yellow_selector"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_black"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/paintcolor_black_selector"
            android:button="@null" />

    </RadioGroup>

</LinearLayout>