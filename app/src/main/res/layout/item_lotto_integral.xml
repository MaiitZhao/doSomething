<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D00B1E">

    <RelativeLayout
        android:id="@+id/rel_prize_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5px"
        android:layout_marginTop="5px"
        android:layout_centerVertical="true"
        android:background="@mipmap/ic_lotto_prize_bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/iv_integral"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_pk_integral" />

            <TextView
                android:id="@+id/tv_count"
                android:textColor="#D00B1E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_integral"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="+100" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>