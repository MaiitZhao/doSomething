<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogColor">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <Button
            android:id="@+id/btn_close_lotto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/lv_lotto"
            android:background="@mipmap/ic_lotto_btn_close" />

        <com.example.maiitzhao.myapplication.signmap.lotto.LottoView
            android:id="@+id/lv_lotto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_close_lotto"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</RelativeLayout>